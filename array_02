	int i;
	int num[5]; //0,1,2,3,4
	int sum = 0; // 누적은 초기화 선언
	
	for (i = 0; i < 5; i++) {
		printf(" %d번의 국어 점수는?", i + 1);
		scanf_s("%d", &num[i]);

		sum += num[i];
	}

	printf("====결과=====\n");
	for (i = 0; i < 5; i++) 	
		printf("%d번 국어점수: %d점\n", i + 1, num[i]);

	printf("총 합 : %d\n", sum);


	return 0;
}
